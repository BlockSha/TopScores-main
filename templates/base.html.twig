<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}TopScore{% endblock %}</title>

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
        }

        body {
            display: flex;
            flex-direction: column;
        }

        main {
            flex: 100;
        }
    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

    {# NAVBAR #}
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_top_scores', {id:1}) }}">TopScore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_top_scores', {id:1}) }}">TopScore</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_jeu_index') }}">Jeux</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_user_index') }}">Joueurs</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_partie_index') }}">Scores</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    {# CONTENU PRINCIPAL #}
    <main class="container mb-4">
        {% block body %}{% endblock %}
    </main>

    {# FOOTER COLLÉ EN BAS #}
    <footer class="bg-dark text-white text-center py-3">
        <p class="mb-0">© {{ "now"|date("Y") }} TopScore. Tous droits réservés.</p>
    </footer>

    {# Bootstrap JS #}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</body>
</html>
